{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "yarn build:reflection && tsc",
    "build:reflection": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node api",
    "dev": "ts-node-dev --transpile-only api",
    "dev:migrate": "prisma migrate save --experimental -c && prisma migrate up --experimental -c",
    "dev:typecheck": "tsc --watch --noEmit",
    "format": "npx prettier --write './**/*.{ts,md}'",
    "start": "NODE_ENV=production node .nexus/build",
    "nexus:gen": "ts-node-dev --transpile-only api/schema.ts",
    "test": "yarn nexus:gen && LOG_LEVEL=error jest --detectOpenHandles"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.9.0",
    "apollo-server": "^2.18.2",
    "graphql": "^15.3.0",
    "graphql-relay": "^0.6.0",
    "nexus-plugin-prisma": "^0.22.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@prisma/cli": "^2.9.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/jest": "^26.0.14",
    "@types/pg": "^7.14.5",
    "get-port": "^5.1.1",
    "graphql-request": "^3.2.0",
    "jest": "^26.5.3",
    "nanoid": "^3.1.12",
    "pg": "^8.4.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.65",
    "typescript": "^4.0.3"
  }
}
